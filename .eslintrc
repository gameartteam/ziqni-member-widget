{
  "extends": "standard",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "ignorePatterns": [
    "**/dependencies/*.js",
    "**/polyfills/*.js",
    "_gamification-ux-package.v3.js",
    "_gamification-ux-package.v3-selfinit.js"
  ],
  "rules": {
    "semi": ["error", "always"],
    "no-extra-semi": "off",
    "no-useless-escape": "off",
    "no-prototype-builtins": "off"
  }
}
